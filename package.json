{
  "name": "sliips-web",
  "version": "1.0",
  "description": "The Sliips UI Frontend.",
  "main": "index.js",
  "engines": {
    "node": "9.x",
    "npm": "5.x",
    "yarn": ">=1.0.0 <2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamacup/sliips-web"
  },
  "keywords": [
    "UI",
    "Frontend"
  ],
  "author": "Tom Pickard <tom@tompickard.com> (https://github.com/iamacup)",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/iamacup/sliips-web/issues"
  },
  "homepage": "https://www.sliips.com/",
  "scripts": {
    "start": "google-app-angine-start-command",
    "start-gce-dev": "yarn install --production=false && yarn start:dev",
    "start-gce-prod": "yarn install --production=false && yarn start:prod",
    "start:local": "yarn better-npm-run start:local",
    "start:dev": "yarn better-npm-run start:dev",
    "start:prod": "yarn better-npm-run start:prod",
    "build:local": "yarn better-npm-run clean:build && yarn better-npm-run build:local",
    "build:dev": "yarn better-npm-run clean:build && yarn better-npm-run build:dev",
    "build:prod": "yarn better-npm-run clean:build && yarn better-npm-run build:prod",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "yarn better-npm-run lint:js",
    "lint:style": "yarn better-npm-run lint:style",
    "flow": "yarn better-npm-run flow",
    "flow:stop": "yarn better-npm-run flow:stop",
    "test": "yarn better-npm-run test",
    "test:watch": "yarn test --watch",
    "clean:all": "yarn clean:build && && yarn clean:test",
    "clean:build": "yarn better-npm-run clean:build",
    "clean:test": "yarn better-npm-run clean:test",
    "coveralls": "yarn better-npm-run coveralls && yarn clean:test"
  },
  "betterScripts": {
    "start:local": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "BABEL_ENV": "development",
        "API_ENDPOINT": "1",
        "PORT": 3000
      }
    },
    "start:dev": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "API_ENDPOINT": "2"
      }
    },
    "start:prod": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "API_ENDPOINT": "3"
      }
    },
    "build:local": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "API_ENDPOINT": "1"
      }
    },
    "build:dev": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "API_ENDPOINT": "2"
      }
    },
    "build:prod": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "API_ENDPOINT": "3"
      }
    },
    "lint:js": {
      "command": "eslint  --fix ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./src/**/*.scss\""
    },
    "flow": {
      "command": "flow"
    },
    "flow:stop": {
      "command": "flow stop"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rimraf ./public/assets"
    },
    "clean:test": {
      "command": "rimraf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-0",
      "flow"
    ],
    "plugins": [
      "transform-runtime",
      "lodash"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true,
      "jquery": true
    },
    "rules": {
      "react/prefer-stateless-function": 1,
      "react/no-unused-prop-types": 1,
      "no-unused-vars": 1,
      "import/prefer-default-export": 1,
      "global-require": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "react/no-unescaped-entities": 0,
      "max-len": 0,
      "react/forbid-prop-types": 0,
      "no-plusplus": 0,
      "prefer-template": 0,
      "jsx-a11y/href-no-hash": 0,
      "class-methods-use-this": 0,
      "function-paren-newline": 0,
      "prefer-destructuring": 1,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    },
    "globals": {
      "__DISABLE_SSR__": true,
      "__DEV__": true,
      "__API__": true,
      "webpackIsomorphicTools": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 2 versions",
    "safari >= 7",
    "not ie <= 8"
  ],
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tools/jest/setup.js"
    ],
    "collectCoverageFrom": [
      "src/containers/**/*.js",
      "src/components/**/*.js",
      "!src/**/__tests__"
    ],
    "moduleNameMapper": {
      ".*\\.(css|scss|sass)$": "<rootDir>/tools/jest/styleMock.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/jest/assetMock.js"
    }
  },
  "dependencies": {
    "@vimeo/player": "^2.2.0",
    "animate.css": "^3.5.2",
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bootstrap-notify": "^3.1.3",
    "bootstrap-sass": "^3.3.7",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "echarts": "^3.8.5",
    "echarts-maps": "^1.1.0",
    "echarts-wordcloud": "^1.1.1",
    "expose-loader": "^0.7.3",
    "express": "^4.16.2",
    "fitvids": "^2.0.0",
    "formvalidation": "^0.6.2-dev",
    "helmet": "^3.9.0",
    "history": "^4.7.2",
    "hpp": "^0.2.2",
    "inputmask": "^3.3.10",
    "jquery.easing": "^1.4.1",
    "js-cookie": "^2.2.0",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "opn": "^5.1.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "5.0.0-alpha.8",
    "redbox-react": "^1.5.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "remarkable": "^1.7.1",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "^2.4.5",
    "typed.js": "^2.0.6",
    "webpack-isomorphic-tools": "^3.0.5",
    "wowjs": "^1.1.3",
    "better-npm-run": "^0.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-remove-console": "^6.8.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "compression-webpack-plugin": "^1.1.2",
    "coveralls": "^3.0.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.7",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "flow-bin": "^0.61.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^3.4.2",
    "jest": "^21.2.1",
    "nock": "^9.1.4",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.3",
    "postcss": "^6.0.14",
    "postcss-loader": "^2.0.9",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.1",
    "webpack-hot-middleware": "^2.21.0"
  }
}
